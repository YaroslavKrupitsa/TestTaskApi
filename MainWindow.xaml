<Window x:Class="TestTaskApi.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskApi"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000">
    <Grid Background="#FF100F0F">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="30"/>
        </Grid.ColumnDefinitions>

        <Grid  Grid.Column="0" Background="#FF1E1D1D" Margin="0,0,0,-434" Grid.Row="1">
            <StackPanel Margin="10">
                <Button Content="Home" Height="40" Margin="0,100,0,0"/>
                <Button Content="Currency info" Height="40" Margin="0,10,0,0"/>
                <Button Content="Currency search" Height="40" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>

        <Grid Background="#FF1E1D1D" Margin="0,0,0,5" Grid.Column="0">
            <StackPanel Margin="2">
                <Button Content="Menu" Height="30" Width="40" Margin="-150,5,0,10"/>
            </StackPanel>
        </Grid>

    </Grid>
</Window>

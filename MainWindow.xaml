<Window x:Class="TestTaskApi.MainWindow"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskApi"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="1000" MinWidth="800" MinHeight="350" MaxWidth="1500" MaxHeight="800">
    <Window.Resources>
        <Storyboard x:Key="CloseSlidingMenu">
            <DoubleAnimation Storyboard.TargetName="SlidingMenu"
                             Storyboard.TargetProperty="Width" From="170" To="0"
                             Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="ButtonClose"
                             Storyboard.TargetProperty="Width" From="40" To="0"
                             Duration="0:0:0"/>
            <DoubleAnimation Storyboard.TargetName="ButtonOpen"
                             Storyboard.TargetProperty="Width" From="0" To="40"
                             Duration="0:0:0"/>
        </Storyboard>

        <Storyboard x:Key="OpenSlidingMenu">
            <DoubleAnimation Storyboard.TargetName="SlidingMenu"
                     Storyboard.TargetProperty="Width" From="0" To="170"
                     Duration="0:0:0.3"/>
            <DoubleAnimation Storyboard.TargetName="ButtonOpen"
                 Storyboard.TargetProperty="Width" From="40" To="0"
                             Duration="0:0:0"/>
            <DoubleAnimation Storyboard.TargetName="ButtonClose"
                 Storyboard.TargetProperty="Width" From="0" To="40"
                             Duration="0:0:0"/>
        </Storyboard>
    </Window.Resources>

    <Window.Triggers>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonClose">
            <BeginStoryboard Storyboard="{StaticResource CloseSlidingMenu}"></BeginStoryboard>
        </EventTrigger>
        <EventTrigger RoutedEvent="ButtonBase.Click" SourceName="ButtonOpen">
            <BeginStoryboard Storyboard="{StaticResource OpenSlidingMenu}"></BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>


    <Grid Background="#FF100F0F">
        <Grid.RowDefinitions>
            <RowDefinition Height="10*"/>
            <RowDefinition Height="100*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="{Binding ElementName=SlidingMenu, Path=Width}"/>
            <ColumnDefinition Width="790*"/>
        </Grid.ColumnDefinitions>



        <Grid  Background="#FF1E1D1D" Margin="0,0,0,0" Grid.Column="0" Width="200" Grid.Row="1" />



        <Grid x:Name="SlidingMenu" Background="#FF1E1D1D" Margin="0,0,0,0" Grid.Column="1" Width="170" Grid.RowSpan="2">
            <StackPanel Margin="10">
                <Button x:Name="HomeB" Command ="{Binding HomeCommand}" Content="Home" Height="40" Margin="0,10,0,0" TextBlock.Foreground="White" BorderThickness="0,0,0,0" Background="{x:Null}" Click="Home_Click"/>
                <Button x:Name="InfoB" Command="{Binding InfoCommand}" Content="Currency info" Height="40" Margin="0,10,0,0" TextBlock.Foreground="White" Background="{x:Null}" BorderBrush="{x:Null}" Click="InfoB_Click"/>
                <Button x:Name="SearchB" Command ="{Binding SearchCommand}" Content="Currency search" Height="40" Margin="0,10,0,0" TextBlock.Foreground="White" Background="#FF1E1D1D" BorderBrush="{x:Null}"/>
            </StackPanel>
        </Grid>

        <Button x:Name="ButtonOpen" 
            Grid.Column="0"
            Width="Auto"
            TextBlock.Foreground="White"
            Background="#FF1E1D1D" BorderThickness="0,0,0,0" BorderBrush="{x:Null}">
            <Grid Margin="5">
                <Image Source="/Image/close_open.png"/>
            </Grid>
        </Button>

        <Button x:Name="ButtonClose" 
                Grid.Column="0"
                Width="Auto"
                TextBlock.Foreground="White"
                Background="#FF1E1D1D" BorderThickness="0,0,0,0" BorderBrush="{x:Null}">
            <Grid Margin="5">
                <Image Source="/Image/close_open.png"/>
            </Grid>
        </Button>

        <Frame 
            Grid.Column ="2"
            Grid.Row="1"
            Content="{Binding CurrentPage}"
            NavigationUIVisibility="Hidden"/>     


    </Grid>
</Window>

<Page x:Class="TestTaskApi.Pages.Exchange"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestTaskApi.Pages"
      xmlns:vm="clr-namespace:TestTaskApi.ViewModels"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Excange">

    <Page.DataContext>
        <vm:ExchangeViewModel/>
    </Page.DataContext>

    <Page.Resources>
        <SolidColorBrush x:Key="BgMain" Color="#121212"/>
        <SolidColorBrush x:Key="BgCard" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="Accent" Color="#FBC02D"/>
        <SolidColorBrush x:Key="TextPrimary" Color="White"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#BDBDBD"/>

        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BgCard}"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Margin" Value="8"/>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource BgMain}" Margin="20">
        <StackPanel Width="400" HorizontalAlignment="Center">

            <TextBlock Text="Crypto Exchange"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="{StaticResource Accent}"
                       HorizontalAlignment="Center"
                       Margin="0 0 0 20"/>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="From" Foreground="{StaticResource TextSecondary}" Margin="0 0 0 4"/>
                    <ComboBox ItemsSource="{Binding Currencies}"
                              SelectedItem="{Binding FromCurrency}"
                              DisplayMemberPath="Symbol"
                              Background="{StaticResource BgCard}"
                              Foreground="#121212"
                              BorderBrush="{StaticResource Accent}"
                              BorderThickness="1"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Amount" Foreground="{StaticResource TextSecondary}" Margin="0 0 0 4"/>
                    <TextBox Text="{Binding Amount, UpdateSourceTrigger=PropertyChanged}"
                             Background="{StaticResource BgCard}"
                             Foreground="{StaticResource TextPrimary}"
                             BorderBrush="{StaticResource Accent}"
                             BorderThickness="1"
                             FontSize="16"
                             Padding="6"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="To" Foreground="{StaticResource TextSecondary}" Margin="0 0 0 4"/>
                    <ComboBox ItemsSource="{Binding Currencies}"
                              SelectedItem="{Binding ToCurrency}"
                              DisplayMemberPath="Symbol"
                              Background="{StaticResource BgCard}"
                              Foreground="#121212"
                              BorderBrush="{StaticResource Accent}"
                              BorderThickness="1"/>
                </StackPanel>
            </Border>

            <Border Style="{StaticResource CardStyle}">
                <StackPanel>
                    <TextBlock Text="Converted Amount"
                               Foreground="{StaticResource TextSecondary}"
                               Margin="0 0 0 4"/>
                    <TextBlock Text="{Binding ConvertedAmount, StringFormat={}{0:N6}}"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource Accent}"/>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Page>

<Page x:Class="TestTaskApi.Pages.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TestTaskApi.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid Margin="10">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding TopCurrencies}" Margin="20">

                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel ItemWidth="260"
                               ItemHeight="150"
                               HorizontalAlignment="Center" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>

                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#1E1E1E"
                            CornerRadius="10"
                            Padding="16"
                            Margin="10"
                            BorderBrush="#FBC02D"
                            BorderThickness="1">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="{Binding Name}"
                                       FontSize="16"
                                       FontWeight="Bold"
                                       Foreground="White"/>

                                <StackPanel Grid.Row="1" Margin="0 10 0 0">
                                    <TextBlock Text="{Binding Symbol}"
                                           Foreground="#BDBDBD"
                                           FontSize="12"/>

                                    <TextBlock Text="{Binding PriceUsd, StringFormat={}{0:N2} $}"
                                           FontSize="18"
                                           FontWeight="SemiBold"
                                           Foreground="#FBC02D"
                                           Margin="0 6 0 0"/>

                                    <TextBlock Text="{Binding MarketCap, StringFormat=Market Cap: {0:N0} $}"
                                           FontSize="11"
                                           Foreground="#9E9E9E"/>
                                </StackPanel>
                            </Grid>

                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>

            </ItemsControl>
        </ScrollViewer>
    </Grid>
</Page>
